<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/top_line"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/image_lesson"
        app:layout_constraintEnd_toEndOf="@id/image_lesson"
        app:layout_constraintStart_toStartOf="@id/image_lesson"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_lesson"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/image_lesson"
        app:layout_constraintStart_toStartOf="@id/image_lesson"
        app:layout_constraintTop_toBottomOf="@id/image_lesson" />

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/title_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_lesson"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название урока" />

</androidx.constraintlayout.widget.ConstraintLayout>